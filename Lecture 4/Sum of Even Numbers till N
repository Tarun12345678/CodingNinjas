import java.util.Scanner;

public class Solution {

	public static void main(String[] args) {
		int i = 1;
        int sum = 0;
        Scanner s = new Scanner(System.in);
        int a = s.nextInt();
        while(i<=a){
            if(i%2==0){
                sum = sum+i;
            }
            i++;
        }
        System.out.println(sum);


	}

}
