import java.util.Scanner;
public class Main {
	
	public static void main(String[] args) {
			    Scanner s = new Scanner (System.in);
	    int n = s.nextInt();
	     long pv = 1;
	     long ans = 0;
	     int rem;
	    while(n>0){
	        rem = n%2;
	        
	        
	        n= n/2;
	        ans = ans+rem*pv;
            
	       pv = pv*10;
	    }
	    System.out.print(ans);

	}
}
